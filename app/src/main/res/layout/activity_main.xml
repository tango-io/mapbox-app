<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mapbox_cameraTargetLat="37.431"
        app:mapbox_cameraTargetLng="-120.981"
        app:mapbox_cameraZoom="4" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:hint="@string/search"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAddresses"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintTop_toBottomOf="@id/etAddress">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddressesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivSearchAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="7dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        app:layout_constraintTop_toTopOf="@id/etAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>